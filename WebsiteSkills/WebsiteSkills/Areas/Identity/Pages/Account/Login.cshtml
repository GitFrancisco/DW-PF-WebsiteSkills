@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1 class="text-center" style="font-size: 2.75rem; font-family: 'Verdana', sans-serif; margin-top: 1rem; margin-bottom: 1rem;">Entrar</h1>
<div class="row justify-content-center">
    <div class="col-md-6">
        <section>
            <form id="account" method="post">
                <h2 class="text-center">Usar uma conta local para entrar.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-dark mb-3">Entrar</button>
                </div>
                <div class="d-flex justify-content-center gap-2">
                    <a type="button" id="forgot-password" class="btn btn-secondary btn-sm" asp-page="./ForgotPassword">Não sabes a password?</a>
                    <a type="button" asp-page="./Register" class="btn btn-secondary btn-sm" asp-route-returnUrl="@Model.ReturnUrl">Registar como novo utilizador</a>
                    <a type="button" id="resend-confirmation" class="btn btn-secondary btn-sm" asp-page="./ResendEmailConfirmation">Reenviar email de confirmação</a>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
