@page
@model RegisterModel
@{
    ViewData["Title"] = "Registo";
}

<h1 class="text-center" style="font-size: 2.75rem; font-family: 'Verdana', sans-serif; margin-top: 1rem; margin-bottom: 1rem;">Registo de um novo Aluno</h1>
<h2 class="text-center"> Criar uma nova conta.</h2>

<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

    <div class="row justify-content-center">
        <div class="col-md-4 ">
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

        </div>
        <div class="col-md-6 col-md-offset-2">
            @* Aqui é feita a recolha dos dados do Aluno *@
            <div class="form-floating mb-3">
                <input asp-for="Input.Aluno.Nome" class="form-control" aria-required="true" />
                <label asp-for="Input.Aluno.Nome"></label>
                <span asp-validation-for="Input.Aluno.Nome" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Aluno.DataNascimento" class="form-control" aria-required="true" />
                <label asp-for="Input.Aluno.DataNascimento"></label>
                <span asp-validation-for="Input.Aluno.DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Aluno.Telemovel" class="form-control" aria-required="true" />
                <label asp-for="Input.Aluno.Telemovel"></label>
                <span asp-validation-for="Input.Aluno.Telemovel" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <br />
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-dark">Registar</button>
        </div>

        @* Botão para fazer o registo como Mentor *@
        <div class="col-12 text-center mt-3">
            <a href="/Identity/Account/RegisterMentor" class="btn btn-secondary">Registar como Mentor</a>
        </div>

    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}