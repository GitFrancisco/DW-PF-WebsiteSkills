@{
    ViewData["Title"] = "Home Page";
}

<style>
    html, body {
        height: 100%;
        width: 100%;
        margin: 0;
        padding: 0;
    }

    .navbar {
        z-index: 10;
        position: relative;
        width: 100%;
    }

    .background-image {
        background-image: url('@Url.Content("~/imagens/Background_MP.png")');
        width: 100%;
        height: 100vh;
        background-position: center left;
        background-size: cover;
        text-align: center;
        justify-content: center;
        align-items: center;
        background-repeat: no-repeat;
        display: flex;
        justify-content: center;
        align-items: center;
        position: absolute;
        top: 0;
        left: 0;
    }

    .text-content {
        font-family: 'Verdana';
        color: white;
        text-align: center;
    }
</style>

<div class="background-image">
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12 text-center text-content">
                <h1 class="display-3">Aprenda com os melhores.</h1>
                <p class="lead">Potencialize seu talento com mentoria personalizada.</p>
                <a href="/Skills" class="btn btn-dark btn-lg">As nossas skills</a>
            </div>
        </div>
    </div>
</div>
