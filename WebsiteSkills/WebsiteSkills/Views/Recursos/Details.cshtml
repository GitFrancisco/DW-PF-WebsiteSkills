@model WebsiteSkills.Models.Recurso

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>

<div>
    <h4>Recurso</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeRecurso)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeRecurso)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ConteudoRecurso)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.TipoRecurso == "Imagem")
            {
                <img src="~/FicheirosRecursos/@Model.ConteudoRecurso"
                alt="Imagem referente a @Model.NomeRecurso"
                title="@Model.NomeRecurso"
                width="150px" />
            }
            else if (Model.TipoRecurso == "PDF")
            {
                <embed src="~/FicheirosRecursos/@Model.ConteudoRecurso" width="800px" height="1000px" />
            }
            else
            {
                @Html.DisplayFor(model => model.ConteudoRecurso)
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoRecurso)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoRecurso)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Skill)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Skill.Nome)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdRecurso">Editar</a> |
    <a asp-action="Index">Voltar à lista de Recursos</a>
</div>
