@model WebsiteSkills.Models.Recurso

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Recurso</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdRecurso" />
            <div class="form-group">
                <label asp-for="NomeRecurso" class="control-label"></label>
                <input asp-for="NomeRecurso" class="form-control" />
                <span asp-validation-for="NomeRecurso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConteudoRecurso" class="control-label"></label>
                @if(ViewBag.TipoRecursoAtual == "PDF")
                {
                    <input type="file" name="PdfRecurso" accept=".pdf" class="form-control" />
                }
                else if (ViewBag.TipoRecursoAtual == "Imagem")
                {
                    <input type="file" name="ImagemRecurso" accept=".png,.jpg,.jpeg" class="form-control" />
                } else
                {
                    <input asp-for="ConteudoRecurso" class="form-control" />
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
