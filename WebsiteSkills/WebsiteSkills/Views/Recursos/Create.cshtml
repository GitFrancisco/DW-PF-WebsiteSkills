@model WebsiteSkills.Models.Recurso

@{
    ViewData["Title"] = "Criar";
}

<h1 class="text-center my-4">Criar</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-4 mb-4 bg-white rounded">
                <div class="card-body">
                    <h4 class="card-title text-center">Recurso</h4>
                    <hr />
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="NomeRecurso" class="control-label"></label>
                            <input asp-for="NomeRecurso" class="form-control" />
                            <span asp-validation-for="NomeRecurso" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="TipoRecurso" class="control-label"></label>
                            @*Dropdown para selecionar o tipo de recurso a utilizar*@
                            <select asp-for="TipoRecurso" class="form-control" asp-items="@(ViewBag.TipoRecursoOptions)"></select>
                            <span asp-validation-for="TipoRecurso" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="SkillsFK" class="control-label"></label>
                            <select asp-for="SkillsFK" class="form-control" asp-items="ViewBag.SkillsFK"></select>
                        </div>

                        <div class="form-group text-center mt-4">
                            <!-- Adicionada a classe mt-4 -->
                            <input type="submit" value="Criar" class="btn btn-dark" />
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center">
                <a asp-action="Index" class="btn btn-secondary">Voltar à lista de Skills</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
