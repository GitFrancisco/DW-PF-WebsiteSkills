@model WebsiteSkills.Models.Recurso

@{
    ViewData["Title"] = "Apagar";
}

<h1>Apagar</h1>

<h3>Confirma a remoção deste Recurso?</h3>
<div>
    <h4>Recurso</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeRecurso)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeRecurso)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ConteudoRecurso)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ConteudoRecurso)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoRecurso)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoRecurso)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Skill)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Skill.Nome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdRecurso" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar à lista de Skills</a>
    </form>
</div>
