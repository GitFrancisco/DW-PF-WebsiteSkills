@model IEnumerable<WebsiteSkills.Models.Recurso>

@{
    ViewData["Title"] = "Índice";
}

<h1 class="text-center" style="font-size: 2.75rem; font-family: 'Verdana', sans-serif; my-4">Recursos</h1>

<div class="container">
    <div class="row mb-3">
        <div class="col text-right">
            <a asp-action="Create" class="btn btn-dark">Criar novo Recurso</a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table table-striped table-bordered table-hover text-center">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.NomeRecurso)</th>
                        <th>@Html.DisplayNameFor(model => model.ConteudoRecurso)</th>
                        <th>@Html.DisplayNameFor(model => model.TipoRecurso)</th>
                        <th>@Html.DisplayNameFor(model => model.Skill)</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.NomeRecurso)</td>
                            <td>@Html.DisplayFor(modelItem => item.ConteudoRecurso)</td>
                            <td>@Html.DisplayFor(modelItem => item.TipoRecurso)</td>
                            <td>@Html.DisplayFor(modelItem => item.Skill.Nome)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.IdRecurso" class="btn btn-sm btn-secondary">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.IdRecurso" class="btn btn-sm btn-secondary">Detalhes</a>
                                <a asp-action="Delete" asp-route-id="@item.IdRecurso" class="btn btn-sm btn-secondary">Apagar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
