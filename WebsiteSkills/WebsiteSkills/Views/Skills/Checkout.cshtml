@model WebsiteSkills.Models.Skills

@{
    ViewData["Title"] = "Checkout";
}

<h2>Confirmar Subscrição</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-warning">
        @ViewBag.Message
    </div>
    <a asp-action="Index" class="btn btn-secondary">Voltar ao índice de Skills</a>
}
else
{
    <div>
        <h3>@Model.Nome</h3>
        <p><strong>Dificuldade:</strong> @Model.Dificuldade</p>
        <p><strong>Tempo:</strong> @Model.Tempo</p>
        <p><strong>Descrição:</strong> @Model.Descricao</p>
        <p><strong>Custo:</strong> @Model.Custo€</p>
        <img src="~/Imagens/@Model.Imagem" alt="Imagem da Skill @Model.Nome" width="150px" />

        <form asp-action="CheckoutConfirmed" method="post">
            <div class="form-group">
                <label class="control-label">Número do cartão</label>
                <input class="form-control" name="CCnum" maxlength="16" />
            </div>
            <div class="form-group">
                <label class="control-label">Nome no cartão</label>
                <input class="form-control" name="CCnome" maxlength="507" />
            </div>
            <div class="form-group">
                <label class="control-label">Validade</label>
                <input class="form-control" name="CCvalidade" maxlength="10" />
            </div>
            <div class="form-group">
                <label class="control-label">Código de segurança (CVV)</label>
                <input class="form-control" name="CCcvv" maxlength="3" />
            </div>

            <input type="hidden" name="id" value="@Model.SkillsId" />
            <button type="submit" class="btn btn-primary">Confirmar Subscrição</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
}
